---
const { tools } = Astro.props;
---

<div class="tools">
  {
    tools.map((tool) => (
      <p class="tool">
        <a href={`/tools/${tool}`}>{tool}</a>
      </p>
    ))
  }
</div>

<style>
  a {
    color: #00539f;
    text-decoration: none;
  }

  .tools {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
  }

  .tool {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }

  .tag::before {
    content: "#";
  }
</style>
