---
interface Props {
  url: string | undefined;
  title: string;
  image: {
    url: string;
    alt: string;
  };
}

const { url, title, image } = Astro.props;
---

<li>
  <a href={url}>
    <div class="image"><img src={image.url} alt={image.alt} /></div>
    <p class="title">{title}</p>
  </a>
</li>

<style lang="scss">
  a {
    display: block;
    text-decoration: none;
    padding: 1rem;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    background-color: #ffffff;
    transition: background-color 0.2s ease-out;

    &:hover {
      background-color: rgba($color: #e6a8ff, $alpha: 0.5);
      border: 1px solid #9d09ff;
      img {
        transform: scale(1.2);
      }
    }
  }

  li {
    list-style: none;
  }

  .image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.2s ease-out;
    }
  }

  .title {
    display: grid;
    place-items: center;
    font-size: 1.25em;
    font-weight: 700;
    color: #333333;
  }
</style>
